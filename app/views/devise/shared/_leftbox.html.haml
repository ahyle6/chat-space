.wrapper
  .leftbox
    .leftbox--header
      .leftbox--header__text
        %p.leftbox--header__text__name
          = current_user.name
        %ul.leftbox--header__text__menu
          %li.leftbox--header__text__menu__new--group
            = link_to new_group_path do
              .leftbox--header__text__menu__new--group__icon
                %i.fa.fa-edit
          %li.leftbox--header__text__menu__edit--user
            = link_to edit_user_path(current_user) do
              .leftbox--header__text__menu__edit--user__icon
                %i.fa.fa-cog
    .leftbox__groups
      .leftbox__groups__group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .leftbox__groups__group__name
              = group.name
            .leftbox__groups__group__message message test
